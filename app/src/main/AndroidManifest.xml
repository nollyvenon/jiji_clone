<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jonnyup.nairarefill">

    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/nairafill_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nairafill_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.jonnyup.nairarefill.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>


        <activity android:name="com.jonnyup.nairarefill.DeepLink">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="nairarefill.com"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name="com.jonnyup.nairarefill.Terms" />
        <activity android:name="com.jonnyup.nairarefill.Privacy" />
        <activity android:name="com.jonnyup.nairarefill.Paystack" />
        <activity android:name="com.jonnyup.nairarefill.ReportUser" />
        <activity android:name="com.jonnyup.nairarefill.FeedbackForm" />
        <activity android:name="com.jonnyup.nairarefill.Search" />
        <activity android:name="com.jonnyup.nairarefill.AllAds" />
        <activity android:name="com.jonnyup.nairarefill.AllFind" />
        <activity
            android:name="com.jonnyup.nairarefill.MessagePanel"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.jonnyup.nairarefill.MessageList"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.jonnyup.nairarefill.AdDetail" />
        <activity android:name="com.jonnyup.nairarefill.Profile" />
        <activity android:name="com.jonnyup.nairarefill.CategoryMembers" />
        <activity
            android:name="com.jonnyup.nairarefill.FindDetail"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.jonnyup.nairarefill.FindPostForm"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.jonnyup.nairarefill.AdPostForm"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.jonnyup.nairarefill.FindPosterRegistration"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:screenOrientation="portrait"
            android:name="com.jonnyup.nairarefill.AdPosterRegistration"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.jonnyup.nairarefill.PhoneNumberVerification" />
        <activity android:name="com.jonnyup.nairarefill.CategoryList" />
        <activity
            android:name="com.jonnyup.nairarefill.MainActivity"
            android:theme="@style/splashTheme"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>