<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".ProfileDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:text="@string/about"
                android:textColor="@color/lighter_black"
                android:textFontWeight="700"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/description"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:textColor="@color/lighter_black"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:text="@string/what_we_do"
                android:textColor="@color/lighter_black"
                android:textFontWeight="700"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/service_description"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/lighter_black"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/report_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/lightest_black"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="600"
                android:textAlignment="textEnd"
                android:text="@string/report_user"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/lightest_black"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="600"
                android:textAlignment="textEnd"
                android:text="@string/terms"/>

            <TextView
                android:id="@+id/privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/lightest_black"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="600"
                android:textAlignment="textEnd"
                android:text="@string/privacy"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/banned"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="This account has been banned"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:textAlignment="center"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>