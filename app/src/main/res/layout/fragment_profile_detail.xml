<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileDetailFragment"
    android:background="@color/light_grey">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/bg3"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="0dp" />

                    <TextView
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:drawableStart="@drawable/icon_edit"
                        android:drawableTint="#6A6A6A"
                        android:drawablePadding="2dp"
                        android:textColor="@color/lighter_black"
                        android:text="Edit"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/company_name"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="sans-serif"
                        android:text="Convergent Infoware"
                        android:textColor="@color/lighter_black"
                        android:textFontWeight="700"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/company_name"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                        <RatingBar
                            android:id="@+id/rating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/location"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="sans-serif"
                            android:text="Lahore, Pakistan "
                            android:textColor="@color/lighter_black"
                            android:textFontWeight="600"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/service_name"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="sans-serif"
                            android:text="Senior Full Stack Developer "
                            android:textColor="@color/lighter_black"
                            android:textFontWeight="600"
                            android:textSize="18sp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:onClick="goToPreviousPost"
                            android:layout_gravity="center_horizontal"
                            android:text="Posted Ads/Finds"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            tools:ignore="OnClick" />

                        <Button
                            android:id="@+id/start_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/skyBlue"
                            android:text="Start Chat"
                            android:textAllCaps="false"
                            android:textSize="14sp" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="sans-serif"
                        android:text="Owner's name"
                        android:textColor="@color/lighter_black"
                        android:textFontWeight="600"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/username"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="sans-serif"
                        android:text="Shahid N."
                        android:textColor="@color/lighter_black"
                        android:textSize="16sp" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="sans-serif"
                        android:text="Years in business"
                        android:textColor="@color/lighter_black"
                        android:textFontWeight="600"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/experience"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/light_grey"
                        android:fontFamily="sans-serif"
                        android:padding="4dp"
                        android:text="6 years of experience"
                        android:textColor="@color/lighter_black"
                        android:textSize="16sp" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="sans-serif"
                        android:text="Market area"
                        android:textColor="@color/lighter_black"
                        android:textFontWeight="600"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/market_area"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/light_grey"
                        android:fontFamily="sans-serif"
                        android:padding="4dp"
                        android:text="Oshodi Market"
                        android:textColor="@color/lighter_black"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="sans-serif"
                        android:text="What we do"
                        android:textColor="@color/lighter_black"
                        android:textFontWeight="600"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/description"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="sans-serif"
                        android:padding="4dp"
                        android:text="@string/sample"
                        android:textColor="@color/lighter_black"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="sans-serif"
                        android:text="Offers"
                        android:textColor="@color/lighter_black"
                        android:textFontWeight="600"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/promotion"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/light_grey"
                        android:fontFamily="sans-serif"
                        android:padding="4dp"
                        android:text="Free Delivery"
                        android:textColor="@color/lighter_black"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>