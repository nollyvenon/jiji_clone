<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".FindDetailFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:padding="10dp"
                        android:text="@string/project_details"
                        android:textColor="@color/lighter_black"
                        android:textFontWeight="600"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif"
                        android:src="@drawable/icon_delete"
                        android:tint="@color/darkest_grey"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/header"
                        android:layout_marginTop="3dp"
                        android:background="@color/dark_grey" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textColor="@color/colorPrimary"
                        android:textFontWeight="700"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/time_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/price"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif"
                        android:paddingStart="8dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="8dp"
                        android:textAllCaps="true"
                        android:textFontWeight="600"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/time_left"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textColor="@color/lighter_black"
                        android:textFontWeight="600"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:fontFamily="sans-serif"
                        android:padding="8dp"
                        android:textColor="@color/lighter_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/awarded_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/description"
                        android:fontFamily="sans-serif"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:textColor="@color/lighter_black"
                        android:textSize="16sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/attachment_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/attachment"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_attachment"
                    android:drawablePadding="3dp"
                    android:fontFamily="sans-serif"
                    android:padding="8dp"
                    android:text="@string/view_attachment"
                    android:textColor="@color/lighter_black"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/share_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/share"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_share"
                    android:drawablePadding="3dp"
                    android:fontFamily="sans-serif"
                    android:padding="8dp"
                    android:text="@string/share"
                    android:textColor="@color/lighter_black"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/award_premium_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/award_premium"
                    android:background="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_error"
                    android:drawablePadding="3dp"
                    android:fontFamily="sans-serif"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:text="Exceeded 3 awarded jobs, click to upgrade"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/proposal_form"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:padding="10dp"
                        android:text="@string/place_bid_on_this_project"
                        android:textColor="@color/lighter_black"
                        android:textFontWeight="600"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/dark_grey" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif"
                        android:padding="10dp"
                        android:text="@string/describe_what_you_need_to_do_for_this_client"
                        android:textColor="@color/lighter_black"
                        android:textFontWeight="600"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:counterEnabled="true"
                        app:counterMaxLength="300">

                        <EditText
                            android:id="@+id/bid_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/light_grey"
                            android:fontFamily="sans-serif"
                            android:gravity="start"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:maxLength="300"
                            android:maxLines="4"
                            android:padding="4dp"
                            android:textColor="@color/lighter_black"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif"
                        android:padding="10dp"
                        android:text="@string/additional_benefit_you_can_offer"
                        android:textColor="@color/lighter_black"
                        android:textFontWeight="600"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:counterEnabled="true"
                        app:counterMaxLength="150">

                        <EditText
                            android:id="@+id/bid_benefit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/light_grey"
                            android:fontFamily="sans-serif"
                            android:gravity="start"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:maxLines="4"
                            android:maxLength="150"
                            android:padding="4dp"
                            android:textColor="@color/lighter_black"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/place_bid" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>